# HashiCorp Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_NAMESPACE=
VAULT_TIMEOUT=60
VAULT_AUTH_METHOD=token
VAULT_TOKEN=
VAULT_TLS_ENABLED=true
VAULT_TLS_SKIP_VERIFY=false
VAULT_CA_CERT=
VAULT_CLIENT_CERT=
VAULT_CLIENT_KEY=

# Vault Authentication Methods
# Token Authentication
# VAULT_TOKEN=your-vault-token

# AppRole Authentication
# VAULT_AUTH_METHOD=approle
# VAULT_ROLE_ID=your-role-id
# VAULT_SECRET_ID=your-secret-id
# VAULT_APPROLE_MOUNT=approle

# Kubernetes Authentication
# VAULT_AUTH_METHOD=kubernetes
# VAULT_K8S_ROLE=your-k8s-role
# VAULT_K8S_JWT_PATH=/var/run/secrets/kubernetes.io/serviceaccount/token
# VAULT_K8S_MOUNT=kubernetes

# UserPass Authentication
# VAULT_AUTH_METHOD=userpass
# VAULT_USERNAME=your-username
# VAULT_PASSWORD=your-password
# VAULT_USERPASS_MOUNT=userpass

# LDAP Authentication
# VAULT_AUTH_METHOD=ldap
# VAULT_LDAP_USERNAME=your-ldap-username
# VAULT_LDAP_PASSWORD=your-ldap-password
# VAULT_LDAP_MOUNT=ldap

# AWS Authentication
# VAULT_AUTH_METHOD=aws
# VAULT_AWS_ROLE=your-aws-role
# VAULT_AWS_MOUNT=aws
# VAULT_AWS_REGION=us-west-2

# GCP Authentication
# VAULT_AUTH_METHOD=gcp
# VAULT_GCP_ROLE=your-gcp-role
# VAULT_GCP_MOUNT=gcp
# VAULT_GCP_PROJECT=your-project-id

# Azure Authentication
# VAULT_AUTH_METHOD=azure
# VAULT_AZURE_ROLE=your-azure-role
# VAULT_AZURE_MOUNT=azure
# VAULT_AZURE_SUBSCRIPTION=your-subscription-id
# VAULT_AZURE_TENANT=your-tenant-id

# Vault Secret Engines
VAULT_KV_MOUNT=secret
VAULT_KV_VERSION=2
VAULT_DB_ENABLED=false
VAULT_PKI_ENABLED=false
VAULT_TRANSIT_ENABLED=false
VAULT_TOTP_ENABLED=false

# Vault Configuration
VAULT_CACHE_ENABLED=true
VAULT_CACHE_TTL=3600
VAULT_CACHE_MAX_ENTRIES=1000
VAULT_MAX_RETRIES=3
VAULT_RETRY_WAIT=1000
VAULT_LEASE_RENEW_BUFFER=300
VAULT_LEASE_INCREMENT=3600
VAULT_MAX_LEASE_TTL=86400
VAULT_LOGGING_ENABLED=true
VAULT_LOG_LEVEL=info
VAULT_AUDIT_LOGGING=true

# Vault Development Settings
VAULT_DEV_MODE=true
VAULT_FALLBACK_TO_ENV=false
VAULT_MOCK_MODE=false

# Vault Health Check
VAULT_HEALTH_CHECK_INTERVAL=300
VAULT_HEALTH_TIMEOUT=30

# Vault Agent (optional)
VAULT_AGENT_ENABLED=false
VAULT_AGENT_SOCKET=/tmp/vault-agent.sock

# All other configuration values are now stored in HashiCorp Vault
# Use the vault CLI or web UI to manage secrets:
#
# Application Configuration -> secret/app/config
# Database Credentials -> secret/database/postgres, secret/database/redis
# External Services -> secret/services/minio, secret/services/mail, etc.
# OAuth Providers -> secret/services/oauth/google, secret/services/oauth/github, etc.
# Authentication -> secret/auth/config, secret/auth/session, secret/auth/mfa
# JWT Configuration -> secret/app/jwt-secret
# Session Configuration -> secret/session/config
# Cache Configuration -> secret/cache/config
#
# For development, you can initialize secrets using:
# ./vault/init-vault.sh
