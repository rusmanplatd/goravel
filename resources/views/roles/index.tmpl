{{define "roles/index.tmpl"}}
{{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}
    <!-- Page Content -->
    <main class="container py-4">
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h4 fw-semibold text-dark">Roles</h1>
                    {{if .tenantID}}
                    <p class="text-muted small mb-0">Managing roles for tenant: {{.tenantID}}</p>
                    {{end}}
                </div>
                <a href="/roles/create?tenant_id={{.tenantID}}" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i> Create Role
                </a>
            </div>
            {{if .error}}
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>{{.error}}</div>
            </div>
            {{end}}
            <!-- Filters -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form method="GET" action="/roles" class="row g-3 align-items-end">
                        <input type="hidden" name="tenant_id" value="{{.tenantID}}">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" name="search" id="search" value="{{.filters.search}}" class="form-control" placeholder="Search roles...">
                        </div>
                        <div class="col-md-4">
                            <label for="guard" class="form-label">Guard</label>
                            <select name="guard" id="guard" class="form-select">
                                <option value="">All</option>
                                {{range .filters.guards}}
                                <option value="{{.}}" {{if eq $.filters.guard .}}selected{{end}}>{{.}}</option>
                                {{end}}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-search me-2"></i> Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Roles List -->
            <div class="card shadow-sm mb-4">
                <ul class="list-group list-group-flush">
                    {{range .roles}}
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <div class="rounded-circle bg-success d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="fas fa-user-tag text-white"></i>
                                    </div>
                                </div>
                                <div>
                                    <div class="fw-semibold text-success"><a href="/roles/{{.ID}}?tenant_id={{$.tenantID}}" class="text-success text-decoration-none">{{.Name}}</a></div>
                                    <span class="badge bg-light text-dark border me-2">{{.Guard}}</span>
                                    <div class="text-muted small">{{.Description}}</div>
                                    <div class="text-muted small"><i class="fas fa-calendar me-1"></i>Created {{.CreatedAt.Format "Jan 02, 2006"}}</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <a href="/roles/{{.ID}}?tenant_id={{$.tenantID}}" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                <a href="/roles/{{.ID}}/edit?tenant_id={{$.tenantID}}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                <form method="POST" action="/roles/{{.ID}}" class="d-inline delete-form">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="tenant_id" value="{{$.tenantID}}">
                                    <button type="submit" class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </div>
                    </li>
                    {{else}}
                    <li class="list-group-item text-center text-muted">
                        <i class="fas fa-user-tag fa-2x mb-2"></i>
                        <div class="fw-medium">No roles found</div>
                        <div class="small">Get started by creating your first role.</div>
                        <a href="/roles/create?tenant_id={{.tenantID}}" class="btn btn-success mt-2"><i class="fas fa-plus me-2"></i> Create Role</a>
                    </li>
                    {{end}}
                </ul>
            </div>
            <!-- Pagination (Bootstrap style, simplified) -->
            {{if .pagination.hasMore}}
            <nav>
                <ul class="pagination justify-content-center">
                    {{if .pagination.cursor}}
                    <li class="page-item"><a class="page-link" href="/roles?cursor={{.pagination.cursor}}&limit={{.pagination.limit}}&search={{.filters.search}}&guard={{.filters.guard}}&tenant_id={{.tenantID}}">Previous</a></li>
                    {{end}}
                    {{if .pagination.nextCursor}}
                    <li class="page-item"><a class="page-link" href="/roles?cursor={{.pagination.nextCursor}}&limit={{.pagination.limit}}&search={{.filters.search}}&guard={{.filters.guard}}&tenant_id={{.tenantID}}">Next</a></li>
                    {{end}}
                </ul>
            </nav>
            {{end}}
        </div>
    </main>
    <script>
    $(function() {
        $('.delete-form').on('submit', function(e) {
            e.preventDefault();
            var form = this;
            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this role!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
    </script>
{{template "layouts/footer.tmpl" .}}
{{end}} 