{{define "chat/index.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-semibold text-dark mb-1">Chat Rooms</h1>
        <p class="text-muted mb-0">Manage and participate in team conversations</p>
    </div>
    <div>
        <a href="/chat/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Room
        </a>
    </div>
</div>

<!-- Chat Rooms Grid -->
<div class="row">
    {{range .rooms}}
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 chat-room-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="flex-grow-1">
                        <h5 class="card-title mb-1">
                            <a href="/chat/{{.id}}" class="text-decoration-none text-dark">{{.name}}</a>
                        </h5>
                        <p class="card-text text-muted small mb-0">{{.description}}</p>
                    </div>
                    {{if gt .unread 0}}
                    <span class="badge bg-primary rounded-pill">{{.unread}}</span>
                    {{end}}
                </div>
                
                <div class="d-flex align-items-center text-muted small mb-3">
                    <i class="fas fa-users me-2"></i>
                    <span>{{.members}} members</span>
                </div>
                
                {{if .last_message}}
                <div class="border-top pt-3">
                    <div class="d-flex align-items-start">
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; min-width: 32px;">
                            <span class="text-white small fw-medium">{{substr .last_message.sender 0 1}}</span>
                        </div>
                        <div class="flex-grow-1 min-width-0">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="fw-medium small">{{.last_message.sender}}</span>
                                <span class="text-muted small">{{.last_message.time}}</span>
                            </div>
                            <p class="text-muted small mb-0 text-truncate">{{.last_message.content}}</p>
                        </div>
                    </div>
                </div>
                {{end}}
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <div class="d-flex gap-2">
                    <a href="/chat/{{.id}}" class="btn btn-sm btn-outline-primary flex-grow-1">
                        <i class="fas fa-comments me-1"></i>Join Chat
                    </a>
                    <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="Room Settings">
                        <i class="fas fa-cog"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{end}}
</div>

{{if not .rooms}}
<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-comments fa-3x text-muted"></i>
    </div>
    <h4 class="text-muted mb-3">No Chat Rooms Yet</h4>
    <p class="text-muted mb-4">Get started by creating your first chat room to connect with your team.</p>
    <a href="/chat/create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create Your First Room
    </a>
</div>
{{end}}

<style>
.chat-room-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: 1px solid #e9ecef;
}

.chat-room-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.min-width-0 {
    min-width: 0;
}
</style>
    </main>

    {{template "layouts/footer.tmpl" .}}
{{end}} 