{{define "dashboard.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
<div class="container py-4">
    <div class="mb-4">
        <h1 class="h3 fw-semibold text-dark">Dashboard</h1>
    </div>
    
    <!-- Welcome Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex align-items-center">
            <div class="me-3">
                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                    <i class="fas fa-user text-white fs-4"></i>
                </div>
            </div>
            <div>
                <h3 class="h5 fw-medium mb-1">Welcome back, {{.user.Name}}!</h3>
                <p class="mb-0 text-muted small">Here's your comprehensive system overview.</p>
            </div>
        </div>
    </div>

    <!-- Core System Stats -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="h6 fw-semibold text-dark mb-3">System Overview</h4>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-info d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-building text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Total Tenants</div>
                        <div class="h5 mb-0">{{.stats.tenants}}</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/tenants" class="text-info text-decoration-none small">View all tenants</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-success d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-user-tag text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Total Roles</div>
                        <div class="h5 mb-0">{{.stats.roles}}</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/roles" class="text-success text-decoration-none small">View all roles</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-purple d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background: #6f42c1;">
                            <i class="fas fa-key text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Total Permissions</div>
                        <div class="h5 mb-0">{{.stats.permissions}}</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/permissions" class="text-decoration-none small" style="color: #6f42c1;">View all permissions</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-users text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Total Users</div>
                        <div class="h5 mb-0">{{.stats.users}}</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/users" class="text-warning text-decoration-none small">View all users</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature Stats -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h4 class="h6 fw-semibold text-dark mb-3">Feature Statistics</h4>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-comments text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Chat Rooms</div>
                        <div class="h5 mb-0">{{.stats.chat_rooms}}</div>
                        <div class="text-muted" style="font-size: 0.75rem;">{{.stats.chat_messages}} messages</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/chat" class="text-primary text-decoration-none small">View chat rooms</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-danger d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-calendar text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Calendar Events</div>
                        <div class="h5 mb-0">{{.stats.calendar_events}}</div>
                        <div class="text-muted" style="font-size: 0.75rem;">{{.stats.upcoming_events}} upcoming</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/calendar" class="text-danger text-decoration-none small">View calendar</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-tasks text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Tasks</div>
                        <div class="h5 mb-0">{{.stats.tasks}}</div>
                        <div class="text-muted" style="font-size: 0.75rem;">{{.stats.active_tasks}} active, {{.stats.completed_tasks}} done</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/tasks" class="text-secondary text-decoration-none small">View tasks</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-dark d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="fas fa-bell text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Notifications</div>
                        <div class="h5 mb-0">{{.stats.notifications}}</div>
                        <div class="text-muted" style="font-size: 0.75rem;">{{.stats.unread_notifications}} unread</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/notifications" class="text-dark text-decoration-none small">View notifications</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Organization & OAuth Stats -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background: #17a2b8;">
                            <i class="fas fa-sitemap text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Organizations</div>
                        <div class="h5 mb-0">{{.stats.organizations}}</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/api/v1/organizations" class="text-decoration-none small" style="color: #17a2b8;">View organizations</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background: #fd7e14;">
                            <i class="fas fa-shield-alt text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">OAuth Clients</div>
                        <div class="h5 mb-0">{{.stats.oauth_clients}}</div>
                        <div class="text-muted" style="font-size: 0.75rem;">{{.stats.active_tokens}} active tokens</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/oauth/clients" class="text-decoration-none small" style="color: #fd7e14;">View OAuth clients</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background: #20c997;">
                            <i class="fas fa-chart-line text-white"></i>
                        </div>
                    </div>
                    <div>
                        <div class="text-muted small">Recent Activity</div>
                        <div class="h5 mb-0">{{.stats.recent_activity}}</div>
                        <div class="text-muted" style="font-size: 0.75rem;">Last 24 hours</div>
                    </div>
                </div>
                <div class="card-footer bg-light p-2">
                    <a href="/api/v1/activity-logs" class="text-decoration-none small" style="color: #20c997;">View activity</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h3 class="h5 fw-medium mb-3">Quick Actions</h3>
            <div class="row g-3">
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/tenants/create" class="btn btn-outline-info w-100 d-flex align-items-center justify-content-center">
                        <i class="fas fa-plus me-2"></i> Create Tenant
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/roles/create" class="btn btn-outline-success w-100 d-flex align-items-center justify-content-center">
                        <i class="fas fa-user-tag me-2"></i> Create Role
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/permissions/create" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center" style="border-color: #6f42c1; color: #6f42c1;">
                        <i class="fas fa-key me-2"></i> Create Permission
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/users/create" class="btn btn-outline-warning w-100 d-flex align-items-center justify-content-center">
                        <i class="fas fa-user-plus me-2"></i> Add User
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/security" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center">
                        <i class="fas fa-shield-alt me-2"></i> Security Settings
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/api/v1/chat/rooms" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center">
                        <i class="fas fa-comments me-2"></i> Start Chat
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/api/v1/calendar/events" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center">
                        <i class="fas fa-calendar-plus me-2"></i> Create Event
                    </a>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <a href="/oauth/clients" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center" style="border-color: #fd7e14; color: #fd7e14;">
                        <i class="fas fa-shield-alt me-2"></i> OAuth Clients
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Information Panels -->
    <div class="row g-4">
        <!-- Recent Activity -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>Recent Activity
                    </h5>
                </div>
                <div class="card-body p-0">
                    {{if .recent_activities}}
                        <div class="list-group list-group-flush">
                            {{range .recent_activities}}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="mb-1">{{.Event}}</h6>
                                        <p class="mb-1 text-muted small">{{.Description}}</p>
                                        {{if .User}}<small class="text-muted">by {{.User.Name}}</small>{{end}}
                                    </div>
                                    <small class="text-muted">{{.CreatedAt.Format "Jan 2, 15:04"}}</small>
                                </div>
                            </div>
                            {{end}}
                        </div>
                    {{else}}
                        <div class="p-3 text-center text-muted">
                            <i class="fas fa-clock fa-2x mb-2"></i>
                            <p class="mb-0">No recent activity</p>
                        </div>
                    {{end}}
                </div>
                <div class="card-footer bg-light">
                    <a href="/api/v1/activity-logs" class="text-decoration-none small">View all activity →</a>
                </div>
            </div>
        </div>

        <!-- Upcoming Events -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar me-2"></i>Upcoming Events
                    </h5>
                </div>
                <div class="card-body p-0">
                    {{if .upcoming_events}}
                        <div class="list-group list-group-flush">
                            {{range .upcoming_events}}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="mb-1">{{.Title}}</h6>
                                        {{if .Location}}<p class="mb-1 text-muted small"><i class="fas fa-map-marker-alt me-1"></i>{{.Location}}</p>{{end}}
                                        <small class="text-muted">{{.StartTime.Format "Jan 2, 15:04"}}</small>
                                    </div>
                                    <span class="badge bg-primary">{{.Type}}</span>
                                </div>
                            </div>
                            {{end}}
                        </div>
                    {{else}}
                        <div class="p-3 text-center text-muted">
                            <i class="fas fa-calendar fa-2x mb-2"></i>
                            <p class="mb-0">No upcoming events</p>
                        </div>
                    {{end}}
                </div>
                <div class="card-footer bg-light">
                    <a href="/api/v1/calendar/events" class="text-decoration-none small">View calendar →</a>
                </div>
            </div>
        </div>

        <!-- Recent Notifications -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bell me-2"></i>Recent Notifications
                        {{if gt .stats.unread_notifications 0}}
                            <span class="badge bg-danger ms-2">{{.stats.unread_notifications}}</span>
                        {{end}}
                    </h5>
                </div>
                <div class="card-body p-0">
                    {{if .recent_notifications}}
                        <div class="list-group list-group-flush">
                            {{range .recent_notifications}}
                            <div class="list-group-item {{if not .ReadAt}}bg-light{{end}}">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="mb-1">{{.Type}}</h6>
                                        {{if .Data.title}}<p class="mb-1 text-muted small">{{.Data.title}}</p>{{end}}
                                        <small class="text-muted">{{.CreatedAt.Format "Jan 2, 15:04"}}</small>
                                    </div>
                                    {{if not .ReadAt}}<span class="badge bg-primary">New</span>{{end}}
                                </div>
                            </div>
                            {{end}}
                        </div>
                    {{else}}
                        <div class="p-3 text-center text-muted">
                            <i class="fas fa-bell fa-2x mb-2"></i>
                            <p class="mb-0">No notifications</p>
                        </div>
                    {{end}}
                </div>
                <div class="card-footer bg-light">
                    <a href="/notifications" class="text-decoration-none small">View all notifications →</a>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

{{template "layouts/footer.tmpl" .}}
{{end}}