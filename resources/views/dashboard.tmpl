{{define "dashboard.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
<div class="container py-4">
    <div class="mb-4">
        <h1 class="h3 fw-semibold text-dark">Dashboard</h1>
    </div>
    <div class="mb-4">
        <!-- Welcome Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="fas fa-user text-white fs-4"></i>
                    </div>
                </div>
                <div>
                    <h3 class="h5 fw-medium mb-1">Welcome back, {{.user.Name}}!</h3>
                    <p class="mb-0 text-muted small">Here's what's happening with your account today.</p>
                </div>
            </div>
        </div>
        <!-- Stats Grid -->
        <div class="row g-4 mb-4">
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <div class="rounded-circle bg-info d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                <i class="fas fa-building text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="text-muted small">Total Tenants</div>
                            <div class="h5 mb-0">{{.stats.tenants}}</div>
                        </div>
                    </div>
                    <div class="card-footer bg-light p-2">
                        <a href="/tenants" class="text-info text-decoration-none small">View all tenants</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <div class="rounded-circle bg-success d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                <i class="fas fa-user-tag text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="text-muted small">Total Roles</div>
                            <div class="h5 mb-0">{{.stats.roles}}</div>
                        </div>
                    </div>
                    <div class="card-footer bg-light p-2">
                        <a href="/roles" class="text-success text-decoration-none small">View all roles</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <div class="rounded-circle bg-purple d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background: #6f42c1;">
                                <i class="fas fa-key text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="text-muted small">Total Permissions</div>
                            <div class="h5 mb-0">{{.stats.permissions}}</div>
                        </div>
                    </div>
                    <div class="card-footer bg-light p-2">
                        <a href="/permissions" class="text-decoration-none small" style="color: #6f42c1;">View all permissions</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                <i class="fas fa-users text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="text-muted small">Total Users</div>
                            <div class="h5 mb-0">{{.stats.users}}</div>
                        </div>
                    </div>
                    <div class="card-footer bg-light p-2">
                        <a href="/users" class="text-warning text-decoration-none small">View all users</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Quick Actions -->
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="h5 fw-medium mb-3">Quick Actions</h3>
                <div class="row g-3">
                    <div class="col-12 col-sm-6 col-lg-3">
                        <a href="/tenants/create" class="btn btn-outline-info w-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-plus me-2"></i> Create Tenant
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <a href="/roles/create" class="btn btn-outline-success w-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-user-tag me-2"></i> Create Role
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <a href="/permissions/create" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center" style="border-color: #6f42c1; color: #6f42c1;">
                            <i class="fas fa-key me-2"></i> Create Permission
                        </a>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <a href="/users/create" class="btn btn-outline-warning w-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-user-plus me-2"></i> Add User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

{{template "layouts/footer.tmpl" .}}
{{end}}