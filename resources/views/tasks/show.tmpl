{{define "tasks/show.tmpl"}}
<div class="d-flex align-items-center mb-4">
    <a href="/tasks" class="btn btn-outline-secondary btn-sm me-3">
        <i class="fas fa-arrow-left me-1"></i>Back to Tasks
    </a>
    <div class="flex-grow-1">
        <h1 class="h3 fw-semibold text-dark mb-1">{{.task.title}}</h1>
        <p class="text-muted mb-0">Task Details & Management</p>
    </div>
    <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="fas fa-cog me-1"></i>Actions
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/tasks/{{.task.id}}/edit"><i class="fas fa-edit me-2"></i>Edit Task</a></li>
            <li><a class="dropdown-item" href="#" onclick="duplicateTask()"><i class="fas fa-copy me-2"></i>Duplicate</a></li>
            <li><a class="dropdown-item" href="#" onclick="convertToProject()"><i class="fas fa-project-diagram me-2"></i>Convert to Project</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item text-danger" href="#" onclick="deleteTask()"><i class="fas fa-trash me-2"></i>Delete Task</a></li>
        </ul>
    </div>
</div>

<div class="row">
    <!-- Task Details -->
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                            <i class="fas fa-tasks text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">{{.task.title}}</h5>
                            <div class="d-flex align-items-center gap-2">
                                {{if eq .task.status "pending"}}
                                <span class="badge bg-warning">Pending</span>
                                {{else if eq .task.status "in_progress"}}
                                <span class="badge bg-info">In Progress</span>
                                {{else if eq .task.status "completed"}}
                                <span class="badge bg-success">Completed</span>
                                {{end}}
                                
                                {{if eq .task.priority "high"}}
                                <span class="badge bg-danger">High Priority</span>
                                {{else if eq .task.priority "medium"}}
                                <span class="badge bg-warning">Medium Priority</span>
                                {{else if eq .task.priority "low"}}
                                <span class="badge bg-secondary">Low Priority</span>
                                {{end}}
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <div class="fw-bold text-primary">{{.task.progress}}%</div>
                        <small class="text-muted">Complete</small>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Progress Bar -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="fw-medium">Progress</label>
                        <span class="text-muted">{{.task.progress}}% Complete</span>
                    </div>
                    <div class="progress mb-2" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: {{.task.progress}}%" aria-valuenow="{{.task.progress}}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-secondary" onclick="updateProgress(0)">0%</button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="updateProgress(25)">25%</button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="updateProgress(50)">50%</button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="updateProgress(75)">75%</button>
                        <button class="btn btn-sm btn-outline-success" onclick="updateProgress(100)">100%</button>
                    </div>
                </div>

                <!-- Task Information -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-user text-muted me-2"></i>
                            <strong>Assignee</strong>
                        </div>
                        <div class="d-flex align-items-center ms-4">
                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                <span class="text-white small fw-medium">{{substr .task.assignee 0 1}}</span>
                            </div>
                            <span>{{.task.assignee}}</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-calendar text-muted me-2"></i>
                            <strong>Due Date</strong>
                        </div>
                        <p class="mb-0 ms-4">{{.task.due_date}}</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-project-diagram text-muted me-2"></i>
                            <strong>Project</strong>
                        </div>
                        <p class="mb-0 ms-4">{{.task.project}}</p>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-clock text-muted me-2"></i>
                            <strong>Created</strong>
                        </div>
                        <p class="mb-0 ms-4">{{.task.created_at}}</p>
                    </div>
                </div>

                <!-- Labels -->
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-tags text-muted me-2"></i>
                        <strong>Labels</strong>
                    </div>
                    <div class="ms-4">
                        {{range .task.labels}}
                        <span class="badge bg-light text-dark me-1 mb-1">{{.}}</span>
                        {{end}}
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-align-left text-muted me-2"></i>
                        <strong>Description</strong>
                    </div>
                    <div class="ms-4">
                        <p class="mb-0">{{.task.description}}</p>
                    </div>
                </div>

                <!-- Quick Status Update -->
                <div class="d-flex gap-2 pt-3 border-top">
                    <button class="btn btn-warning btn-sm" onclick="updateStatus('pending')">
                        <i class="fas fa-clock me-1"></i>Mark Pending
                    </button>
                    <button class="btn btn-info btn-sm" onclick="updateStatus('in_progress')">
                        <i class="fas fa-play me-1"></i>Start Work
                    </button>
                    <button class="btn btn-success btn-sm" onclick="updateStatus('completed')">
                        <i class="fas fa-check me-1"></i>Mark Complete
                    </button>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="card shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="fas fa-comments me-2"></i>Comments ({{len .task.comments}})</h6>
            </div>
            <div class="card-body">
                <!-- Existing Comments -->
                {{range .task.comments}}
                <div class="d-flex align-items-start mb-3">
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <span class="text-white small fw-medium">{{substr .author 0 1}}</span>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-1">
                            <span class="fw-medium me-2">{{.author}}</span>
                            <span class="text-muted small">{{.time}}</span>
                        </div>
                        <div class="bg-light rounded p-3">
                            <p class="mb-0">{{.content}}</p>
                        </div>
                    </div>
                </div>
                {{end}}

                <!-- Add Comment Form -->
                <div class="border-top pt-3">
                    <div class="d-flex align-items-start">
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <span class="text-white small fw-medium">{{substr .user.Name 0 1}}</span>
                        </div>
                        <div class="flex-grow-1">
                            <form id="commentForm">
                                <div class="mb-3">
                                    <textarea class="form-control" id="commentText" placeholder="Add a comment..." rows="3"></textarea>
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fas fa-paper-plane me-1"></i>Post Comment
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="cancelComment()">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Task Statistics -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Task Statistics</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="fw-bold text-info">5</div>
                        <small class="text-muted">Days Active</small>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="fw-bold text-warning">2</div>
                        <small class="text-muted">Days Remaining</small>
                    </div>
                    <div class="col-6">
                        <div class="fw-bold text-success">{{len .task.comments}}</div>
                        <small class="text-muted">Comments</small>
                    </div>
                    <div class="col-6">
                        <div class="fw-bold text-primary">3</div>
                        <small class="text-muted">Updates</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Tasks -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="fas fa-link me-2"></i>Related Tasks</h6>
            </div>
            <div class="card-body p-0">
                <div class="d-flex align-items-center p-3 border-bottom">
                    <div class="rounded-circle bg-info d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                        <i class="fas fa-tasks text-white small"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0 small">Setup database schema</h6>
                        <small class="text-muted">Completed</small>
                    </div>
                    <span class="badge bg-success">Done</span>
                </div>
                <div class="d-flex align-items-center p-3 border-bottom">
                    <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                        <i class="fas fa-tasks text-white small"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0 small">Write API tests</h6>
                        <small class="text-muted">Depends on this task</small>
                    </div>
                    <span class="badge bg-warning">Waiting</span>
                </div>
            </div>
            <div class="card-footer bg-white">
                <button class="btn btn-outline-primary btn-sm w-100" onclick="linkTasks()">
                    <i class="fas fa-plus me-1"></i>Link Tasks
                </button>
            </div>
        </div>

        <!-- Time Tracking -->
        <div class="card shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h6 class="mb-0"><i class="fas fa-stopwatch me-2"></i>Time Tracking</h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="fw-bold h4 text-primary">8h 30m</div>
                    <small class="text-muted">Total Time Logged</small>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-success btn-sm" onclick="startTimer()">
                        <i class="fas fa-play me-1"></i>Start Timer
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" onclick="logTime()">
                        <i class="fas fa-clock me-1"></i>Log Time Manually
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" onclick="viewTimeLog()">
                        <i class="fas fa-history me-1"></i>View Time Log
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function updateProgress(percentage) {
    $('.progress-bar').css('width', percentage + '%').attr('aria-valuenow', percentage);
    $('.progress').next().find('span').text(percentage + '% Complete');
    showSuccess(`Progress updated to ${percentage}%`);
}

function updateStatus(status) {
    let statusText = status.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase());
    showSuccess(`Task status updated to ${statusText}`);
}

function duplicateTask() {
    showSuccess('Task duplicated successfully.');
}

function convertToProject() {
    showSuccess('Task converted to project.');
}

function deleteTask() {
    confirmDelete('Are you sure you want to delete this task?', function() {
        showSuccess('Task deleted successfully.');
        window.location.href = '/tasks';
    });
}

function linkTasks() {
    showSuccess('Task linking interface opened.');
}

function startTimer() {
    showSuccess('Timer started for this task.');
}

function logTime() {
    showSuccess('Time logging interface opened.');
}

function viewTimeLog() {
    showSuccess('Time log displayed.');
}

function cancelComment() {
    $('#commentText').val('');
}

$(document).ready(function() {
    $('#commentForm').on('submit', function(e) {
        e.preventDefault();
        const comment = $('#commentText').val().trim();
        if (comment) {
            // Add comment to the list (demo functionality)
            const commentHtml = `
                <div class="d-flex align-items-start mb-3">
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                        <span class="text-white small fw-medium">{{substr .user.Name 0 1}}</span>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-1">
                            <span class="fw-medium me-2">{{.user.Name}}</span>
                            <span class="text-muted small">Just now</span>
                        </div>
                        <div class="bg-light rounded p-3">
                            <p class="mb-0">${comment}</p>
                        </div>
                    </div>
                </div>
            `;
            $('.border-top').before(commentHtml);
            $('#commentText').val('');
            showSuccess('Comment added successfully.');
        }
    });
});
</script>
{{end}}

{{template "layouts/app.tmpl" .}} 