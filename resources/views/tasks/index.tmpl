{{define "tasks/index.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-semibold text-dark mb-1">Tasks</h1>
        <p class="text-muted mb-0">Manage and track your team's tasks</p>
    </div>
    <div>
        <a href="/tasks/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Task
        </a>
    </div>
</div>

<!-- Task Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <i class="fas fa-tasks text-primary fa-lg"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-1">{{.stats.total}}</h4>
                <small class="text-muted">Total Tasks</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <i class="fas fa-clock text-warning fa-lg"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-1">{{.stats.pending}}</h4>
                <small class="text-muted">Pending</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                        <i class="fas fa-spinner text-info fa-lg"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-1">{{.stats.in_progress}}</h4>
                <small class="text-muted">In Progress</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="d-flex align-items-center justify-content-center mb-2">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <i class="fas fa-check text-success fa-lg"></i>
                    </div>
                </div>
                <h4 class="fw-bold mb-1">{{.stats.completed}}</h4>
                <small class="text-muted">Completed</small>
            </div>
        </div>
    </div>
</div>

<!-- Task Filters -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-3">
                <select class="form-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="in_progress">In Progress</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="priorityFilter">
                    <option value="">All Priorities</option>
                    <option value="high">High</option>
                    <option value="medium">Medium</option>
                    <option value="low">Low</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="projectFilter">
                    <option value="">All Projects</option>
                    <option value="project-alpha">Project Alpha</option>
                    <option value="project-beta">Project Beta</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search tasks..." id="searchTasks">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tasks List -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 ps-4">Task</th>
                        <th class="border-0">Status</th>
                        <th class="border-0">Priority</th>
                        <th class="border-0">Assignee</th>
                        <th class="border-0">Due Date</th>
                        <th class="border-0">Progress</th>
                        <th class="border-0 pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{range .tasks}}
                    <tr>
                        <td class="ps-4">
                            <div>
                                <h6 class="mb-1">
                                    <a href="/tasks/{{.id}}" class="text-decoration-none text-dark">{{.title}}</a>
                                </h6>
                                <small class="text-muted">{{.description}}</small>
                                <div class="mt-1">
                                    {{range .labels}}
                                    <span class="badge bg-light text-dark me-1">{{.}}</span>
                                    {{end}}
                                </div>
                            </div>
                        </td>
                        <td>
                            {{if eq .status "pending"}}
                            <span class="badge bg-warning">Pending</span>
                            {{else if eq .status "in_progress"}}
                            <span class="badge bg-info">In Progress</span>
                            {{else if eq .status "completed"}}
                            <span class="badge bg-success">Completed</span>
                            {{end}}
                        </td>
                        <td>
                            {{if eq .priority "high"}}
                            <span class="badge bg-danger">High</span>
                            {{else if eq .priority "medium"}}
                            <span class="badge bg-warning">Medium</span>
                            {{else if eq .priority "low"}}
                            <span class="badge bg-secondary">Low</span>
                            {{end}}
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                    <span class="text-white small fw-medium">{{substr .assignee 0 1}}</span>
                                </div>
                                <span>{{.assignee}}</span>
                            </div>
                        </td>
                        <td>{{.due_date}}</td>
                        <td>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar" role="progressbar" style="width: {{.progress}}%" aria-valuenow="{{.progress}}" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="text-muted">{{.progress}}%</small>
                        </td>
                        <td class="pe-4">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/tasks/{{.id}}"><i class="fas fa-eye me-2"></i>View</a></li>
                                    <li><a class="dropdown-item" href="/tasks/{{.id}}/edit"><i class="fas fa-edit me-2"></i>Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash me-2"></i>Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    {{end}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Filter functionality
    $('#statusFilter, #priorityFilter, #projectFilter').on('change', function() {
        // Implement filtering logic here
        console.log('Filter changed');
    });
    
    // Search functionality
    $('#searchTasks').on('input', function() {
        // Implement search logic here
        console.log('Search:', $(this).val());
    });
});
</script>
    </main>

    {{template "layouts/footer.tmpl" .}}
{{end}} 