{{define "files/index.tmpl"}}
    
    {{template "layouts/nav.tmpl" .}}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-semibold text-dark mb-1">File Manager</h1>
        <p class="text-muted mb-0">Manage your files and documents</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="fas fa-upload me-2"></i>Upload Files
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
            <i class="fas fa-folder-plus me-2"></i>New Folder
        </button>
    </div>
</div>

<!-- Storage Info -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <i class="fas fa-hdd text-primary me-3 fa-2x"></i>
                    <div>
                        <h6 class="mb-1">Storage Usage</h6>
                        <div class="progress" style="width: 300px; height: 8px;">
                            <div class="progress-bar" role="progressbar" style="width: {{.storage_info.usage_percent}}%" 
                                 aria-valuenow="{{.storage_info.usage_percent}}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">{{.storage_info.used}} of {{.storage_info.total}} used ({{.storage_info.available}} available)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="gridView">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm active" id="listView">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/files" class="text-decoration-none">
                <i class="fas fa-home me-1"></i>Home
            </a>
        </li>
        {{if ne .current_path "/"}}
        <li class="breadcrumb-item active" aria-current="page">{{.current_path}}</li>
        {{end}}
    </ol>
</nav>

<!-- File Browser -->
<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="form-check me-3">
                    <input class="form-check-input" type="checkbox" id="selectAll">
                </div>
                <h6 class="mb-0">Files & Folders</h6>
            </div>
            <div class="d-flex align-items-center gap-2">
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" class="form-control" placeholder="Search files..." id="searchFiles">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-sort me-1"></i>Sort
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="sortBy('name')"><i class="fas fa-sort-alpha-down me-2"></i>Name</a></li>
                        <li><a class="dropdown-item" href="#" onclick="sortBy('size')"><i class="fas fa-sort-amount-down me-2"></i>Size</a></li>
                        <li><a class="dropdown-item" href="#" onclick="sortBy('modified')"><i class="fas fa-sort-numeric-down me-2"></i>Modified</a></li>
                        <li><a class="dropdown-item" href="#" onclick="sortBy('type')"><i class="fas fa-sort me-2"></i>Type</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Folders -->
        {{if .folders}}
        <div class="file-list">
            {{range .folders}}
            <div class="file-item d-flex align-items-center p-3 border-bottom" data-type="folder" data-name="{{.name}}">
                <div class="form-check me-3">
                    <input class="form-check-input file-checkbox" type="checkbox" value="{{.path}}">
                </div>
                <div class="file-icon me-3">
                    <i class="fas fa-folder text-warning fa-2x"></i>
                </div>
                <div class="file-info flex-grow-1">
                    <h6 class="mb-1">
                        <a href="/files/browse?path={{.path}}" class="text-decoration-none text-dark">{{.name}}</a>
                    </h6>
                    <small class="text-muted">{{.files_count}} items • {{.size}}</small>
                </div>
                <div class="file-meta text-end me-3">
                    <small class="text-muted">{{.modified}}</small>
                </div>
                <div class="file-actions">
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/files/browse?path={{.path}}"><i class="fas fa-folder-open me-2"></i>Open</a></li>
                            <li><a class="dropdown-item" href="#" onclick="renameItem('{{.path}}')"><i class="fas fa-edit me-2"></i>Rename</a></li>
                            <li><a class="dropdown-item" href="#" onclick="shareItem('{{.path}}')"><i class="fas fa-share me-2"></i>Share</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#" onclick="deleteItem('{{.path}}')"><i class="fas fa-trash me-2"></i>Delete</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {{end}}
        </div>
        {{end}}

        <!-- Files -->
        {{if .files}}
        <div class="file-list">
            {{range .files}}
            <div class="file-item d-flex align-items-center p-3 border-bottom" data-type="file" data-name="{{.name}}" data-size="{{.size}}">
                <div class="form-check me-3">
                    <input class="form-check-input file-checkbox" type="checkbox" value="{{.path}}">
                </div>
                <div class="file-icon me-3">
                    <i class="{{.icon}} {{.color}} fa-2x"></i>
                </div>
                <div class="file-info flex-grow-1">
                    <h6 class="mb-1">
                        <a href="#" onclick="previewFile('{{.path}}')" class="text-decoration-none text-dark">{{.name}}</a>
                    </h6>
                    <small class="text-muted">{{.type}} • {{.size}}</small>
                </div>
                <div class="file-meta text-end me-3">
                    <small class="text-muted">{{.modified}}</small>
                </div>
                <div class="file-actions">
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="previewFile('{{.path}}')"><i class="fas fa-eye me-2"></i>Preview</a></li>
                            <li><a class="dropdown-item" href="#" onclick="downloadFile('{{.path}}')"><i class="fas fa-download me-2"></i>Download</a></li>
                            <li><a class="dropdown-item" href="#" onclick="renameItem('{{.path}}')"><i class="fas fa-edit me-2"></i>Rename</a></li>
                            <li><a class="dropdown-item" href="#" onclick="shareItem('{{.path}}')"><i class="fas fa-share me-2"></i>Share</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#" onclick="deleteItem('{{.path}}')"><i class="fas fa-trash me-2"></i>Delete</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {{end}}
        </div>
        {{end}}

        {{if and (not .folders) (not .files)}}
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-folder-open fa-3x text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">This folder is empty</h4>
            <p class="text-muted mb-4">Upload files or create folders to get started.</p>
            <div class="d-flex gap-2 justify-content-center">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                    <i class="fas fa-upload me-2"></i>Upload Files
                </button>
                <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                    <i class="fas fa-folder-plus me-2"></i>New Folder
                </button>
            </div>
        </div>
        {{end}}
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-upload me-2"></i>Upload Files</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="uploadForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <div class="upload-area border-2 border-dashed border-primary rounded p-5 text-center">
                            <i class="fas fa-cloud-upload-alt fa-3x text-primary mb-3"></i>
                            <h5>Drag & drop files here</h5>
                            <p class="text-muted mb-3">or click to browse</p>
                            <input type="file" class="form-control d-none" id="fileInput" multiple>
                            <button type="button" class="btn btn-primary" onclick="$('#fileInput').click()">
                                <i class="fas fa-folder-open me-2"></i>Choose Files
                            </button>
                        </div>
                    </div>
                    <div id="fileList" class="d-none">
                        <h6>Selected Files:</h6>
                        <div id="selectedFiles"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="uploadFiles()">
                    <i class="fas fa-upload me-2"></i>Upload Files
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Create Folder Modal -->
<div class="modal fade" id="createFolderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-folder-plus me-2"></i>Create New Folder</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createFolderForm">
                    <div class="mb-3">
                        <label for="folderName" class="form-label">Folder Name</label>
                        <input type="text" class="form-control" id="folderName" placeholder="Enter folder name" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createFolder()">
                    <i class="fas fa-folder-plus me-2"></i>Create Folder
                </button>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Select all checkbox
    $('#selectAll').on('change', function() {
        $('.file-checkbox').prop('checked', $(this).is(':checked'));
    });
    
    // File upload handling
    $('#fileInput').on('change', function() {
        const files = this.files;
        if (files.length > 0) {
            $('#fileList').removeClass('d-none');
            let fileListHtml = '';
            for (let i = 0; i < files.length; i++) {
                fileListHtml += `
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-file me-2"></i>
                        <span>${files[i].name}</span>
                        <small class="text-muted ms-auto">${formatFileSize(files[i].size)}</small>
                    </div>
                `;
            }
            $('#selectedFiles').html(fileListHtml);
        }
    });
    
    // Drag and drop
    $('.upload-area').on('dragover', function(e) {
        e.preventDefault();
        $(this).addClass('border-success');
    }).on('dragleave', function(e) {
        e.preventDefault();
        $(this).removeClass('border-success');
    }).on('drop', function(e) {
        e.preventDefault();
        $(this).removeClass('border-success');
        const files = e.originalEvent.dataTransfer.files;
        $('#fileInput')[0].files = files;
        $('#fileInput').trigger('change');
    });
    
    // Search functionality
    $('#searchFiles').on('input', function() {
        const searchTerm = $(this).val().toLowerCase();
        $('.file-item').each(function() {
            const fileName = $(this).data('name').toLowerCase();
            if (fileName.includes(searchTerm)) {
                $(this).show();
            } else {
                $(this).hide();
            }
        });
    });
    
    // View toggle
    $('#gridView, #listView').on('click', function() {
        $('#gridView, #listView').removeClass('active');
        $(this).addClass('active');
        
        if ($(this).attr('id') === 'gridView') {
            // Switch to grid view (implementation needed)
            showSuccess('Grid view activated');
        } else {
            // Switch to list view
            showSuccess('List view activated');
        }
    });
});

function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
}

function uploadFiles() {
    const files = $('#fileInput')[0].files;
    if (files.length === 0) {
        showError('Please select files to upload');
        return;
    }
    
    // Simulate upload
    showSuccess(`${files.length} file(s) uploaded successfully!`);
    $('#uploadModal').modal('hide');
    setTimeout(() => location.reload(), 1000);
}

function createFolder() {
    const folderName = $('#folderName').val().trim();
    if (!folderName) {
        showError('Please enter a folder name');
        return;
    }
    
    showSuccess(`Folder "${folderName}" created successfully!`);
    $('#createFolderModal').modal('hide');
    setTimeout(() => location.reload(), 1000);
}

function sortBy(criteria) {
    showSuccess(`Sorted by ${criteria}`);
}

function previewFile(path) {
    showSuccess(`Opening preview for ${path}`);
}

function downloadFile(path) {
    showSuccess(`Downloading ${path}`);
}

function renameItem(path) {
    const newName = prompt('Enter new name:');
    if (newName) {
        showSuccess(`Renamed to ${newName}`);
    }
}

function shareItem(path) {
    showSuccess(`Share link generated for ${path}`);
}

function deleteItem(path) {
    confirmDelete(`Are you sure you want to delete this item?`, function() {
        showSuccess('Item deleted successfully');
        setTimeout(() => location.reload(), 1000);
    });
}
</script>

<style>
.file-item:hover {
    background-color: #f8f9fa;
}

.upload-area {
    transition: all 0.3s ease;
    cursor: pointer;
}

.upload-area:hover {
    background-color: #f8f9fa;
}

.upload-area.border-success {
    border-color: #198754 !important;
    background-color: #d1e7dd;
}

.file-icon {
    width: 60px;
    text-align: center;
}

.file-meta {
    min-width: 120px;
}
</style>
{{template "layouts/footer.tmpl" .}} 
{{end}}
