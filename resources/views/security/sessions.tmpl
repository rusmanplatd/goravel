                                                    onclick="viewSessionDetails('session_4')">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Details
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm flex-fill" 
                                                    onclick="revokeSession('session_4')">
