    </main>

    <!-- Session Details Modal -->
    <div class="modal fade" id="sessionDetailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Session Details
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="session-details-content">
                        <!-- Details will be loaded here -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="revokeSessionFromModal()">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Sign Out This Session
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Revoke All Sessions Confirmation Modal -->
    <div class="modal fade" id="revokeAllModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Sign Out All Devices
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This will sign you out of all devices except this one.
                    </div>
                    <p>Are you sure you want to sign out of all other devices? This action will:</p>
                    <ul class="mb-0">
                        <li>End all active sessions on other devices</li>
                        <li>Require you to sign in again on those devices</li>
                        <li>Keep your current session active</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="confirmRevokeAll()">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Sign Out All Other Devices
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentSessionId = null;

        // Session management functions
        function viewSessionDetails(sessionId) {
            currentSessionId = sessionId;
            
            // Fetch real session data from server
            fetch(`/api/v1/sessions/${sessionId}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                }
            })
            .then(response => response.json())
            .then(sessionData => {
                displaySessionDetails(sessionData);
            })
            .catch(error => {
                console.error('Error fetching session data:', error);
                // Fallback to basic info if API fails
                displaySessionDetails({
                    device: 'Unknown Device',
                    location: 'Unknown Location',
                    ip: 'Unknown IP',
                    userAgent: 'Unknown User Agent',
                    startTime: 'Unknown',
                    lastActivity: 'Unknown',
                    activities: []
                });
            });
        }

        function displaySessionDetails(sessionData) {
                        { time: '2 hours ago', action: 'Logged in successfully' }
                    ]
                }
            };
            
            const session = sessionData[sessionId] || sessionData.session_2;
            
            const detailsHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-3">Session Information</h6>
                        <table class="table table-sm">
                            <tr>
                                <td class="text-muted">Device:</td>
                                <td>${session.device}</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Location:</td>
                                <td>${session.location}</td>
                            </tr>
                            <tr>
                                <td class="text-muted">IP Address:</td>
                                <td><code>${session.ip}</code></td>
                            </tr>
                            <tr>
                                <td class="text-muted">Started:</td>
                                <td>${session.startTime}</td>
                            </tr>
                            <tr>
                                <td class="text-muted">Last Activity:</td>
                                <td>${session.lastActivity}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-3">User Agent</h6>
                        <div class="bg-light p-3 rounded">
                            <code class="small">${session.userAgent}</code>
                        </div>
                        
                        <h6 class="fw-bold mb-3 mt-4">Security Status</h6>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item px-0 py-2 d-flex justify-content-between">
                                <span>Secure Connection</span>
                                <span class="badge bg-success">HTTPS</span>
                            </div>
                            <div class="list-group-item px-0 py-2 d-flex justify-content-between">
                                <span>Two-Factor Auth</span>
                                <span class="badge bg-success">Verified</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="mb-3">
                    <h6 class="fw-bold mb-3">Recent Activity</h6>
                    <div class="list-group">
                        ${session.activities.map(activity => `
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-medium">${activity.action}</div>
                                </div>
                                <small class="text-muted">${activity.time}</small>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;
            
            document.getElementById('session-details-content').innerHTML = detailsHTML;
            const modal = new bootstrap.Modal(document.getElementById('sessionDetailsModal'));
            modal.show();
        }

        function revokeSession(sessionId) {
            if (confirm('Are you sure you want to sign out of this session?')) {
                showAlert('Signing out session...', 'info');
                
                // Simulate API call
                setTimeout(() => {
                    showAlert('Session signed out successfully!', 'success');
                    // Remove the session card from UI
                    const sessionCard = document.querySelector(`[onclick*="${sessionId}"]`).closest('.col-lg-6');
                    if (sessionCard) {
                        sessionCard.remove();
                    }
                }, 1000);
            }
        }

        function revokeAllSessions() {
            const modal = new bootstrap.Modal(document.getElementById('revokeAllModal'));
            modal.show();
        }

        function confirmRevokeAll() {
            showAlert('Signing out all other sessions...', 'info');
            
            // Simulate API call
            setTimeout(() => {
                showAlert('All other sessions have been signed out successfully!', 'success');
                // Remove all non-current session cards
                document.querySelectorAll('.col-lg-6:not(:first-child)').forEach(card => {
                    card.remove();
                });
            }, 1500);
            
            bootstrap.Modal.getInstance(document.getElementById('revokeAllModal')).hide();
        }

        function revokeSessionFromModal() {
            if (currentSessionId) {
                revokeSession(currentSessionId);
                bootstrap.Modal.getInstance(document.getElementById('sessionDetailsModal')).hide();
            }
        }

        // Search and filter functionality
        document.getElementById('session-search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const sessionCards = document.querySelectorAll('#sessions-container .col-lg-6');
            
            sessionCards.forEach(card => {
                const text = card.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        document.getElementById('device-filter').addEventListener('change', function() {
            const filterValue = this.value.toLowerCase();
            const sessionCards = document.querySelectorAll('#sessions-container .col-lg-6');
            
            sessionCards.forEach(card => {
                if (!filterValue) {
                    card.style.display = 'block';
                } else {
                    const deviceText = card.textContent.toLowerCase();
                    if (deviceText.includes(filterValue)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                }
            });
        });

        // Utility functions
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alert-container');
            const alertHTML = `
                <div class="alert alert-${type} d-flex align-items-center alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : type === 'info' ? 'info-circle' : 'exclamation-circle'} me-2"></i>
                    <div class="flex-grow-1">${message}</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            alertContainer.innerHTML = alertHTML;
            
            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                const alert = alertContainer.querySelector('.alert');
                if (alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 5000);
        }

        // Auto-dismiss existing alerts after 5 seconds
        setTimeout(() => {
            document.querySelectorAll('.alert-dismissible').forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>

    <style>
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
        }
        
        .badge {
