{{define "projects/index.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-semibold text-dark mb-1">Projects</h1>
        <p class="text-muted mb-0">Manage and track your team's projects</p>
    </div>
    <div>
        <a href="/projects/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Project
        </a>
    </div>
</div>

<!-- Projects Grid -->
<div class="row">
    {{range .projects}}
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 project-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="flex-grow-1">
                        <h5 class="card-title mb-1">
                            <a href="/projects/{{.id}}" class="text-decoration-none text-dark">{{.name}}</a>
                        </h5>
                        <p class="card-text text-muted small mb-0">{{.description}}</p>
                    </div>
                    <div class="ms-2">
                        {{if eq .status "active"}}
                        <span class="badge bg-success">Active</span>
                        {{else if eq .status "planning"}}
                        <span class="badge bg-warning">Planning</span>
                        {{else if eq .status "completed"}}
                        <span class="badge bg-primary">Completed</span>
                        {{else if eq .status "on_hold"}}
                        <span class="badge bg-secondary">On Hold</span>
                        {{end}}
                    </div>
                </div>
                
                <!-- Progress Bar -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <small class="text-muted">Progress</small>
                        <small class="text-muted">{{.progress}}%</small>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar" role="progressbar" style="width: {{.progress}}%" aria-valuenow="{{.progress}}" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                
                <!-- Project Stats -->
                <div class="row text-center mb-3">
                    <div class="col-4">
                        <div class="border-end">
                            <div class="fw-bold">{{.team_size}}</div>
                            <small class="text-muted">Team</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="border-end">
                            <div class="fw-bold">{{.tasks_completed}}/{{.tasks_total}}</div>
                            <small class="text-muted">Tasks</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="fw-bold">{{.budget}}</div>
                        <small class="text-muted">Budget</small>
                    </div>
                </div>
                
                <!-- Timeline -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between text-muted small">
                        <span><i class="fas fa-calendar-alt me-1"></i>{{.start_date}}</span>
                        <span><i class="fas fa-calendar-check me-1"></i>{{.end_date}}</span>
                    </div>
                </div>
            </div>
            
            <div class="card-footer bg-transparent border-top-0">
                <div class="d-flex gap-2">
                    <a href="/projects/{{.id}}" class="btn btn-sm btn-outline-primary flex-grow-1">
                        <i class="fas fa-eye me-1"></i>View Details
                    </a>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/projects/{{.id}}/edit"><i class="fas fa-edit me-2"></i>Edit</a></li>
                            <li><a class="dropdown-item" href="/projects/{{.id}}/tasks"><i class="fas fa-tasks me-2"></i>Tasks</a></li>
                            <li><a class="dropdown-item" href="/projects/{{.id}}/team"><i class="fas fa-users me-2"></i>Team</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-archive me-2"></i>Archive</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{end}}
</div>

{{if not .projects}}
<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-project-diagram fa-3x text-muted"></i>
    </div>
    <h4 class="text-muted mb-3">No Projects Yet</h4>
    <p class="text-muted mb-4">Start organizing your work by creating your first project.</p>
    <a href="/projects/create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create Your First Project
    </a>
</div>
{{end}}

<style>
.project-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: 1px solid #e9ecef;
}

.project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.border-end:last-child {
    border-right: none !important;
}
</style>

<script>
$(document).ready(function() {
    // Project card hover effects
    $('.project-card').on('mouseenter', function() {
        $(this).addClass('shadow-lg');
    }).on('mouseleave', function() {
        $(this).removeClass('shadow-lg');
    });
});
</script>
    </main>

    {{template "layouts/footer.tmpl" .}}
{{end}} 