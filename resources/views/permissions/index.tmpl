{{define "permissions/index.tmpl"}}
{{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}
    <!-- Page Content -->
    <main class="container py-4">
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h4 fw-semibold text-dark">Permissions</h1>
                    {{if .organizationId}}
                    <p class="text-muted small mb-0">Managing permissions for organization: {{.organizationId}}</p>
                    {{end}}
                </div>
                <a href="/permissions/create?organization_id={{.organizationId}}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> Create Permission
                </a>
            </div>
            {{if .error}}
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>{{.error}}</div>
            </div>
            {{end}}
            <!-- Filters -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form method="GET" action="/permissions" class="row g-3 align-items-end">
                        <input type="hidden" name="organization_id" value="{{.organizationId}}">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" name="search" id="search" value="{{.filters.search}}" class="form-control" placeholder="Search permissions...">
                        </div>
                        <div class="col-md-4">
                            <label for="guard" class="form-label">Guard</label>
                            <select name="guard" id="guard" class="form-select">
                                <option value="">All</option>
                                {{range .filters.guards}}
                                <option value="{{.}}" {{if eq $.filters.guard .}}selected{{end}}>{{.}}</option>
                                {{end}}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-search me-2"></i> Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Permissions List -->
            <div class="card shadow-sm mb-4">
                <ul class="list-group list-group-flush">
                    {{range .permissions}}
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background: #6f42c1;">
                                        <i class="fas fa-key text-white"></i>
                                    </div>
                                </div>
                                <div>
                                    <div class="fw-semibold" style="color: #6f42c1;">{{.Name}}</div>
                                    <span class="badge bg-light text-dark border me-2">{{.Guard}}</span>
                                    <div class="text-muted small">{{.Description}}</div>
                                    <div class="text-muted small"><i class="fas fa-calendar me-1"></i>Created {{.CreatedAt.Format "Jan 02, 2006"}}</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <a href="/permissions/{{.ID}}/edit?organization_id={{$.organizationId}}" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                <form method="POST" action="/permissions/{{.ID}}" class="d-inline delete-form">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="organization_id" value="{{$.organizationId}}">
                                    <button type="submit" class="btn btn-sm btn-danger delete-btn"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </div>
                    </li>
                    {{else}}
                    <li class="list-group-item text-center text-muted">
                        <i class="fas fa-key fa-2x mb-2"></i>
                        <div class="fw-medium">No permissions found</div>
                        <div class="small">Get started by creating your first permission.</div>
                        <a href="/permissions/create?organization_id={{.organizationId}}" class="btn btn-primary mt-2"><i class="fas fa-plus me-2"></i> Create Permission</a>
                    </li>
                    {{end}}
                </ul>
            </div>
            <!-- Pagination (Bootstrap style, simplified) -->
            {{if .pagination.hasMore}}
            <nav>
                <ul class="pagination justify-content-center">
                    {{if .pagination.cursor}}
                    <li class="page-item"><a class="page-link" href="/permissions?cursor={{.pagination.cursor}}&limit={{.pagination.limit}}&search={{.filters.search}}&guard={{.filters.guard}}&organization_id={{.organizationId}}">Previous</a></li>
                    {{end}}
                    {{if .pagination.nextCursor}}
                    <li class="page-item"><a class="page-link" href="/permissions?cursor={{.pagination.nextCursor}}&limit={{.pagination.limit}}&search={{.filters.search}}&guard={{.filters.guard}}&organization_id={{.organizationId}}">Next</a></li>
                    {{end}}
                </ul>
            </nav>
            {{end}}
        </div>
    </main>
    <script>
    $(function() {
        $('.delete-form').on('submit', function(e) {
            e.preventDefault();
            var form = this;
            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this permission!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
    </script>
{{template "layouts/footer.tmpl" .}}
{{end}} 