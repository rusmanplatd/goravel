{{define "permissions/edit.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="container py-4">
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/permissions?tenant_id={{.tenantID}}" class="text-decoration-none">
                            <i class="fas fa-key me-1"></i>Permissions
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Permission</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-lg-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Edit Permission</h5>
                        <p class="card-text text-muted small">
                            Update the permission information for the tenant.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <form method="POST" action="/permissions/{{.permission.ID}}">
                            <input type="hidden" name="_method" value="PUT">
                            <input type="hidden" name="tenant_id" value="{{.tenantID}}">
                            <input type="hidden" name="id" value="{{.permission.ID}}">
                            
                            {{if .error}}
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <div>{{.error}}</div>
                            </div>
                            {{end}}

                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="name" class="form-label">Permission Name <span class="text-danger">*</span></label>
                                    <input type="text" name="name" id="name" class="form-control" 
                                           value="{{.permission.Name}}" placeholder="e.g., users.create, posts.edit" required>
                                </div>

                                <div class="col-12">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea name="description" id="description" rows="3" class="form-control" 
                                              placeholder="Enter permission description">{{.permission.Description}}</textarea>
                                </div>

                                <div class="col-12">
                                    <label for="guard" class="form-label">Guard <span class="text-danger">*</span></label>
                                    <select name="guard" id="guard" class="form-select" required>
                                        <option value="web" {{if eq .permission.Guard "web"}}selected{{end}}>Web</option>
                                        <option value="api" {{if eq .permission.Guard "api"}}selected{{end}}>API</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/permissions?tenant_id={{.tenantID}}" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Update Permission
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {{template "layouts/footer.tmpl" .}}
{{end}} 