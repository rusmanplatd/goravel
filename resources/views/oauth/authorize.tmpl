{{define "oauth/authorize.tmpl"}}
    {{template "layouts/header.tmpl" .}}

    <!-- Google-like OAuth Authorization Styles -->
    <style>
        .oauth-container {
            font-family: 'Google Sans', 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        
        .oauth-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            max-width: 450px;
            margin: 0 auto;
            border: 1px solid #dadce0;
        }
        
        .oauth-card:hover {
            box-shadow: 0 4px 25px rgba(0,0,0,0.15);
        }
        
        .google-logo {
            width: 48px;
            height: 48px;
            background: #4285f4;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
        }
        
        .account-selector {
            border: 1px solid #dadce0;
            border-radius: 8px;
            padding: 16px;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-bottom: 12px;
            background: white;
        }
        
        .account-selector:hover {
            background-color: #f8f9fa;
            border-color: #4285f4;
            box-shadow: 0 1px 6px rgba(32,33,36,.28);
        }
        
        .account-selector.selected {
            border-color: #4285f4;
            background-color: #e8f0fe;
        }
        
        .account-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 12px;
            background: #4285f4;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 500;
        }
        
        .permission-item {
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.2s ease;
        }
        
        .permission-item:hover {
            background-color: #f8f9fa;
            border-radius: 4px;
            margin: 0 -8px;
            padding: 12px 8px;
        }
        
        .permission-item:last-child {
            border-bottom: none;
        }
        
        .permission-icon {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            font-size: 10px;
        }
        
        .permission-sensitive {
            background: #fef7e0;
            color: #f57c00;
        }
        
        .permission-normal {
            background: #e8f5e8;
            color: #2e7d32;
        }
        
        .btn-google {
            background: #1a73e8;
            border: none;
            color: white;
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: 500;
            transition: all 0.2s ease;
            font-size: 14px;
        }
        
        .btn-google:hover {
            background: #1557b0;
            box-shadow: 0 1px 2px rgba(60,64,67,.3), 0 1px 3px 1px rgba(60,64,67,.15);
            color: white;
        }
        
        .btn-cancel {
            background: transparent;
            border: 1px solid #dadce0;
            color: #5f6368;
            padding: 12px 24px;
            border-radius: 4px;
            font-weight: 500;
            transition: all 0.2s ease;
            font-size: 14px;
        }
        
        .btn-cancel:hover {
            background-color: #f8f9fa;
            border-color: #4285f4;
            color: #1a73e8;
        }
        
        .security-info {
            text-align: center;
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #f0f0f0;
            color: #5f6368;
            font-size: 12px;
        }
        
        .security-info a {
            color: #1a73e8;
            text-decoration: none;
        }
        
        .security-info a:hover {
            text-decoration: underline;
        }
        
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }
        
        .client-info {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            border: 1px solid #e8eaed;
        }
        
        .client-icon {
            width: 32px;
            height: 32px;
            background: #4285f4;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            color: white;
            font-size: 14px;
        }
        
        .scope-category {
            margin-bottom: 16px;
        }
        
        .scope-category-title {
            font-weight: 500;
            color: #202124;
            font-size: 14px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
        }
        
        .loading-spinner {
            border: 2px solid #f3f3f3;
            border-top: 2px solid #1a73e8;
            border-radius: 50%;
            width: 16px;
            height: 16px;
            animation: spin 1s linear infinite;
            margin-right: 8px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>

    <main class="oauth-container d-flex align-items-center justify-content-center py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                    <div class="oauth-card fade-in p-4">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <div class="google-logo">
                                <i class="fas fa-shield-alt text-white fs-5"></i>
                            </div>
                            <h1 class="h4 fw-normal text-dark mb-2">
                                Choose an account
                            </h1>
                            <p class="text-muted mb-0" style="font-size: 14px;">
                                to continue to <strong>{{.client.Name}}</strong>
                            </p>
                        </div>

                        <!-- Client Information -->
                        <div class="client-info">
                            <div class="d-flex align-items-center">
                                <div class="client-icon">
                                    {{if .client.User}}
                                        {{if .client.User.Avatar}}
                                            <img src="{{.client.User.Avatar}}" alt="{{.client.Name}}" style="width: 32px; height: 32px; border-radius: 50%;">
                                        {{else}}
                                            <i class="fas fa-cube"></i>
                                        {{end}}
                                    {{else}}
                                        <i class="fas fa-cube"></i>
                                    {{end}}
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-medium" style="color: #202124; font-size: 14px;">{{.client.Name}}</div>
                                    <div class="text-muted" style="font-size: 12px;">
                                        {{if .client.User}}
                                            by {{.client.User.Name}}
                                        {{else}}
                                            Third-party application
                                        {{end}}
                                    </div>
                                </div>
                                {{if .client.IsFirstParty}}
                                <div class="badge bg-success" style="font-size: 10px;">
                                    <i class="fas fa-check me-1"></i>
                                    Verified
                                </div>
                                {{end}}
                            </div>
                        </div>

                        <!-- User Account Selection -->
                        <div class="mb-4">
                            <div class="account-selector selected" onclick="selectAccount(this)">
                                <div class="d-flex align-items-center">
                                    <div class="account-avatar">
                                        {{if .user.Avatar}}
                                            <img src="{{.user.Avatar}}" alt="{{.user.Name}}" style="width: 40px; height: 40px; border-radius: 50%;">
                                        {{else}}
                                            <i class="fas fa-user"></i>
                                        {{end}}
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-medium" style="color: #202124; font-size: 14px;">{{.user.Name}}</div>
                                        <div class="text-muted" style="font-size: 12px;">{{.user.Email}}</div>
                                    </div>
                                    <div class="text-success">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Add account option -->
                            <div class="account-selector" onclick="addAccount()">
                                <div class="d-flex align-items-center">
                                    <div class="account-avatar" style="background: #5f6368;">
                                        <i class="fas fa-plus"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-medium" style="color: #202124; font-size: 14px;">Use another account</div>
                                        <div class="text-muted" style="font-size: 12px;">Sign in with a different account</div>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fas fa-arrow-right"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Permissions Display -->
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-key text-primary me-2"></i>
                                <h6 class="mb-0 fw-medium" style="font-size: 14px; color: #202124;">
                                    {{.client.Name}} wants to:
                                </h6>
                            </div>
                            
                            <!-- Display all scopes -->
                            {{range .scopes}}
                            <div class="permission-item">
                                <div class="d-flex align-items-start">
                                    <div class="permission-icon {{if .Sensitive}}permission-sensitive{{else}}permission-normal{{end}}">
                                        {{if .Sensitive}}
                                            <i class="fas fa-exclamation-triangle"></i>
                                        {{else}}
                                            <i class="fas fa-check"></i>
                                        {{end}}
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-medium" style="font-size: 13px; color: #202124;">{{.Title}}</div>
                                        <div class="text-muted" style="font-size: 12px;">{{.Description}}</div>
                                        {{if .Sensitive}}
                                            <div class="text-warning" style="font-size: 11px;">
                                                <i class="fas fa-info-circle me-1"></i>
                                                This permission allows access to sensitive data
                                            </div>
                                        {{end}}
                                    </div>
                                </div>
                            </div>
                            {{end}}
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center pt-3">
                            <button type="button" class="btn btn-cancel" onclick="cancelAuthorization()">
                                Cancel
                            </button>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-outline-secondary" onclick="showMoreInfo()" style="font-size: 13px; border-color: #dadce0; color: #5f6368;">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Learn more
                                </button>
                                <button type="button" class="btn btn-google pulse" onclick="authorizeApplication()" id="authorize-btn">
                                    <i class="fas fa-check me-2"></i>
                                    Allow
                                </button>
                            </div>
                        </div>

                        <!-- Security Information -->
                        <div class="security-info">
                            <div class="d-flex align-items-center justify-content-center mb-2">
                                <i class="fas fa-shield-alt me-1"></i>
                                <span>Your privacy and security are protected</span>
                            </div>
                            <div>
                                <a href="/privacy" class="me-3">Privacy Policy</a>
                                <a href="/terms" class="me-3">Terms of Service</a>
                                <a href="/security">Security Center</a>
                            </div>
                        </div>

                        <!-- Hidden form for submission -->
                        <form id="authorize-form" method="POST" action="/oauth/authorize" style="display: none;">
                            <input type="hidden" name="client_id" value="{{.client_id}}">
                            <input type="hidden" name="redirect_uri" value="{{.redirect_uri}}">
                            <input type="hidden" name="response_type" value="{{.response_type}}">
                            <input type="hidden" name="scope" value="{{.scope}}">
                            <input type="hidden" name="state" value="{{.state}}">
                            <input type="hidden" name="code_challenge" value="{{.code_challenge}}">
                            <input type="hidden" name="code_challenge_method" value="{{.code_challenge_method}}">
                            <input type="hidden" name="authorized" value="true" id="authorized-input">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Global variables
        let selectedAccount = 'current';
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth animations
            document.querySelector('.oauth-card').classList.add('fade-in');
            
            // Auto-focus on allow button after a short delay
            setTimeout(() => {
                document.getElementById('authorize-btn').focus();
            }, 500);
        });

        // Select account function
        function selectAccount(element) {
            // Remove selected class from all account selectors
            document.querySelectorAll('.account-selector').forEach(selector => {
                selector.classList.remove('selected');
            });
            
            // Add selected class to clicked element
            element.classList.add('selected');
            selectedAccount = 'current';
        }

        // Add account function
        function addAccount() {
            const currentUrl = new URL(window.location.href);
            const loginUrl = new URL('/login', window.location.origin);
            
            // Preserve OAuth parameters for after login
            loginUrl.searchParams.set('add_account', 'true');
            loginUrl.searchParams.set('redirect', currentUrl.pathname + currentUrl.search);
            
            window.location.href = loginUrl.toString();
        }

        // Authorize application
        function authorizeApplication() {
            const btn = document.getElementById('authorize-btn');
            const form = document.getElementById('authorize-form');
            
            // Show loading state
            btn.disabled = true;
            btn.innerHTML = '<div class="loading-spinner d-inline-block"></div>Authorizing...';
            
            // Add a small delay for better UX
            setTimeout(() => {
                form.submit();
            }, 500);
        }

        // Cancel authorization
        function cancelAuthorization() {
            const form = document.getElementById('authorize-form');
            const authorizedInput = document.getElementById('authorized-input');
            
            // Set authorized to false
            authorizedInput.value = 'false';
            
            // Submit form
            form.submit();
        }

        // Show more info modal/popup
        function showMoreInfo() {
            const clientName = '{{.client.Name}}';
            const scopes = [
                {{range .scopes}}
                {
                    name: '{{.Name}}',
                    title: '{{.Title}}',
                    description: '{{.Description}}',
                    sensitive: {{.Sensitive}}
                },
                {{end}}
            ];
            
            let infoHTML = `
                <div class="modal fade" id="infoModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">About ${clientName}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p class="mb-3">This application is requesting the following permissions:</p>
                                <div class="list-group">
            `;
            
            scopes.forEach(scope => {
                const badgeClass = scope.sensitive ? 'bg-warning' : 'bg-success';
                const iconClass = scope.sensitive ? 'fa-exclamation-triangle' : 'fa-check';
                
                infoHTML += `
                    <div class="list-group-item">
                        <div class="d-flex align-items-start">
                            <span class="badge ${badgeClass} me-2 mt-1">
                                <i class="fas ${iconClass}"></i>
                            </span>
                            <div>
                                <h6 class="mb-1">${scope.title}</h6>
                                <p class="mb-0 text-muted small">${scope.description}</p>
                                ${scope.sensitive ? '<small class="text-warning">⚠️ Sensitive permission</small>' : ''}
                            </div>
                        </div>
                    </div>
                `;
            });
            
            infoHTML += `
                                </div>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        You can revoke these permissions at any time from your account settings.
                                    </small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Remove existing modal if any
            const existingModal = document.getElementById('infoModal');
            if (existingModal) {
                existingModal.remove();
            }
            
            // Add modal to page
            document.body.insertAdjacentHTML('beforeend', infoHTML);
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('infoModal'));
            modal.show();
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                authorizeApplication();
            } else if (e.key === 'Escape') {
                e.preventDefault();
                cancelAuthorization();
            }
        });
    </script>

    {{template "layouts/footer.tmpl" .}}
{{end}} 