{{define "oauth/authorize.tmpl"}}
    {{template "layouts/header.tmpl" .}}

    <!-- Page Content -->
    <main class="container-fluid">
        <div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <!-- Header -->
                        <div class="text-center mb-4">
                            <div class="mx-auto bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-shield-alt text-primary fs-4"></i>
                            </div>
                            <h2 class="h4 fw-bold text-dark mb-2">
                                Choose an account
                            </h2>
                            <p class="text-muted small mb-0">
                                to continue to <strong>{{.client.Name}}</strong>
                            </p>
                        </div>

                        <!-- User Account Selection -->
                        <div class="mb-4">
                            <div class="border rounded p-3 mb-3" style="cursor: pointer;" onclick="selectAccount('{{.user.ID}}')">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fas fa-user text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-medium">{{.user.Name}}</div>
                                        <div class="text-muted small">{{.user.Email}}</div>
                                    </div>
                                    <div class="text-primary">
                                        <i class="fas fa-check-circle" id="selected-{{.user.ID}}" style="display: none;"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Client Information -->
                        <div class="border rounded p-3 mb-4">
                            <div class="d-flex align-items-start">
                                <div class="bg-secondary bg-opacity-10 rounded d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-cube text-secondary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-medium mb-1">{{.client.Name}}</div>
                                    <div class="text-muted small">
                                        {{if .client.UserID}}
                                            Developed by {{.client.User.Name}}
                                        {{else}}
                                            Third-party application
                                        {{end}}
                                    </div>
                                    {{if .client.GetRedirectURIs}}
                                    <div class="text-muted small mt-1">
                                        <i class="fas fa-external-link-alt me-1"></i>
                                        {{index .client.GetRedirectURIs 0}}
                                    </div>
                                    {{end}}
                                </div>
                            </div>
                        </div>

                        <!-- Permissions/Scopes -->
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">
                                <i class="fas fa-key me-2"></i>
                                This will allow {{.client.Name}} to:
                            </h6>
                            <div class="list-group list-group-flush">
                                {{range .scopes}}
                                <div class="list-group-item border-0 px-0 py-2">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-check text-success me-3 mt-1"></i>
                                        <div>
                                            <div class="fw-medium">{{.Title}}</div>
                                            <div class="text-muted small">{{.Description}}</div>
                                        </div>
                                    </div>
                                </div>
                                {{end}}
                            </div>
                        </div>

                        <!-- Warning for sensitive permissions -->
                        {{if .hasSensitiveScopes}}
                        <div class="alert alert-warning d-flex align-items-start" role="alert">
                            <i class="fas fa-exclamation-triangle me-2 mt-1"></i>
                            <div class="small">
                                <strong>Make sure you trust {{.client.Name}}</strong><br>
                                You may be sharing sensitive info with this site or app.
                            </div>
                        </div>
                        {{end}}

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary" onclick="cancelAuthorization()">
                                Cancel
                            </button>
                            <button type="button" class="btn btn-primary" onclick="authorizeApplication()">
                                <i class="fas fa-check me-2"></i>
                                Allow
                            </button>
                        </div>

                        <!-- Hidden form for submission -->
                        <form id="authForm" method="POST" style="display: none;">
                            <input type="hidden" name="client_id" value="{{.client_id}}">
                            <input type="hidden" name="redirect_uri" value="{{.redirect_uri}}">
                            <input type="hidden" name="response_type" value="{{.response_type}}">
                            <input type="hidden" name="scope" value="{{.scope}}">
                            <input type="hidden" name="state" value="{{.state}}">
                            <input type="hidden" name="code_challenge" value="{{.code_challenge}}">
                            <input type="hidden" name="code_challenge_method" value="{{.code_challenge_method}}">
                            <input type="hidden" name="authorized" value="false" id="authorizedInput">
                        </form>
                    </div>
                </div>

                <!-- Footer -->
                <div class="text-center mt-4">
                    <div class="text-muted small">
                        <i class="fas fa-shield-alt me-1"></i>
                        Your data is protected by our security measures
                    </div>
                    <div class="mt-2">
                        <a href="#" class="text-decoration-none text-muted small me-3">Privacy Policy</a>
                        <a href="#" class="text-decoration-none text-muted small">Terms of Service</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        let selectedAccountId = '{{.user.ID}}';

        function selectAccount(accountId) {
            // Hide all checkmarks
            document.querySelectorAll('[id^="selected-"]').forEach(el => {
                el.style.display = 'none';
            });
            
            // Show checkmark for selected account
            document.getElementById('selected-' + accountId).style.display = 'inline';
            selectedAccountId = accountId;
        }

        function authorizeApplication() {
            document.getElementById('authorizedInput').value = 'true';
            document.getElementById('authForm').submit();
        }

        function cancelAuthorization() {
            document.getElementById('authorizedInput').value = 'false';
            document.getElementById('authForm').submit();
        }

        // Auto-select the current user account
        selectAccount('{{.user.ID}}');
    </script>

    {{template "layouts/footer.tmpl" .}}
{{end}} 