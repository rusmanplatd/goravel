{{define "tenants/index.tmpl"}}
    {{template "layouts/header.tmpl" .}}
    {{template "layouts/nav.tmpl" .}}

    <!-- Page Content -->
    <main class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 fw-bold text-dark">Tenants</h1>
            <a href="/tenants/create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Create Tenant
            </a>
        </div>

        {{if .error}}
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <div>{{.error}}</div>
        </div>
        {{end}}

        <!-- Filters -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="GET" action="/tenants" class="row g-3">
                    <div class="col-12 col-md-4">
                        <label for="search" class="form-label">Search</label>
                        <input type="text" name="search" id="search" value="{{.filters.search}}" 
                               class="form-control" placeholder="Search tenants...">
                    </div>
                    <div class="col-12 col-md-4">
                        <label for="is_active" class="form-label">Status</label>
                        <select name="is_active" id="is_active" class="form-select">
                            <option value="">All</option>
                            <option value="true" {{if eq .filters.is_active "true"}}selected{{end}}>Active</option>
                            <option value="false" {{if eq .filters.is_active "false"}}selected{{end}}>Inactive</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-search me-2"></i>
                            Filter
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tenants List -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                {{if .tenants}}
                <div class="list-group list-group-flush">
                    {{range .tenants}}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                                    <i class="fas fa-building text-primary"></i>
                                </div>
                                <div>
                                    <div class="d-flex align-items-center mb-1">
                                        <h5 class="mb-0 me-2">
                                            <a href="/tenants/{{.ID}}" class="text-decoration-none">{{.Name}}</a>
                                        </h5>
                                        {{if .IsActive}}
                                        <span class="badge bg-success">Active</span>
                                        {{else}}
                                        <span class="badge bg-danger">Inactive</span>
                                        {{end}}
                                    </div>
                                    <div class="text-muted small">
                                        {{if .Domain}}
                                        <div><i class="fas fa-globe me-1"></i>{{.Domain}}</div>
                                        {{end}}
                                        {{if .Description}}
                                        <div class="text-truncate">{{.Description}}</div>
                                        {{end}}
                                        <div><i class="fas fa-calendar me-1"></i>Created {{.CreatedAt.Format "Jan 02, 2006"}}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="btn-group" role="group">
                                <a href="/tenants/{{.ID}}" class="btn btn-sm btn-outline-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/tenants/{{.ID}}/edit" class="btn btn-sm btn-outline-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger" title="Delete" 
                                        onclick="deleteTenant('{{.ID}}', '{{.Name}}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    {{end}}
                </div>
                {{else}}
                <div class="text-center py-5">
                    <div class="text-muted">
                        <i class="fas fa-building fs-1 mb-3"></i>
                        <h5 class="mb-2">No tenants found</h5>
                        <p class="mb-3">Get started by creating your first tenant.</p>
                        <a href="/tenants/create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Create Tenant
                        </a>
                    </div>
                </div>
                {{end}}
            </div>
        </div>

        <!-- Pagination -->
        {{if .pagination.hasMore}}
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted small">
                Showing {{len .tenants}} results
            </div>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    {{if .pagination.cursor}}
                    <li class="page-item">
                        <a class="page-link" href="/tenants?cursor={{.pagination.cursor}}&limit={{.pagination.limit}}&search={{.filters.search}}&is_active={{.filters.is_active}}">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    {{end}}
                    {{if .pagination.nextCursor}}
                    <li class="page-item">
                        <a class="page-link" href="/tenants?cursor={{.pagination.nextCursor}}&limit={{.pagination.limit}}&search={{.filters.search}}&is_active={{.filters.is_active}}">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                    {{end}}
                </ul>
            </nav>
        </div>
        {{end}}
    </main>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete tenant "<span id="tenantName"></span>"?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function deleteTenant(id, name) {
            document.getElementById('tenantName').textContent = name;
            document.getElementById('deleteForm').action = '/tenants/' + id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>

    {{template "layouts/footer.tmpl" .}}
{{end}} 