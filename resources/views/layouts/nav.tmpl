    <!-- Tenant Switcher JavaScript -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const tenantDropdown = document.getElementById('tenantDropdown');
        const tenantDropdownMenu = document.getElementById('tenantDropdownMenu');
        const tenantLoadingItem = document.getElementById('tenantLoadingItem');
        
        let tenantsLoaded = false;
        let userTenants = [];
        let currentTenantId = null;

        // Load tenants when dropdown is clicked
        tenantDropdown.addEventListener('click', function(e) {
            if (!tenantsLoaded) {
                loadUserTenants();
            }
        });

        async function loadUserTenants() {
            try {
                // Load user tenants
                const tenantsResponse = await fetch('/tenants/user/list');
                const tenantsData = await tenantsResponse.json();
                
                // Load current tenant
                const currentResponse = await fetch('/tenants/current');
                const currentData = await currentResponse.json();
                
                userTenants = tenantsData.tenants || [];
                currentTenantId = currentData.current_tenant?.id || null;
                
                renderTenantDropdown();
                tenantsLoaded = true;
            } catch (error) {
                console.error('Failed to load tenants:', error);
                tenantLoadingItem.innerHTML = '<span class="dropdown-item-text text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Failed to load tenants</span>';
            }
        }

        function renderTenantDropdown() {
            // Clear loading item
            tenantLoadingItem.remove();
            
            // Find the divider before "Manage Tenants"
            const divider = tenantDropdownMenu.querySelector('hr');
            
            if (userTenants.length === 0) {
                const noTenantsItem = document.createElement('li');
                noTenantsItem.innerHTML = '<span class="dropdown-item-text text-muted">No tenants available</span>';
                tenantDropdownMenu.insertBefore(noTenantsItem, divider);
            } else {
                userTenants.forEach(tenant => {
                    const tenantItem = document.createElement('li');
                    const isActive = tenant.id === currentTenantId;
                    
                    tenantItem.innerHTML = `
                        <button type="button" class="dropdown-item ${isActive ? 'active' : ''}" onclick="switchTenant('${tenant.id}')">
                            <i class="fas fa-building me-2"></i>${tenant.name}
                            ${isActive ? '<i class="fas fa-check ms-2"></i>' : ''}
                        </button>
                    `;
                    
                    tenantDropdownMenu.insertBefore(tenantItem, divider);
                });
            }
        }

        // Make switchTenant function global
        window.switchTenant = async function(tenantId) {
            if (tenantId === currentTenantId) {
                return; // Already active
            }

            try {
                const response = await fetch('/tenants/switch', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ tenant_id: tenantId })
                });

                const data = await response.json();
                
                if (data.success) {
                    // Show success message and reload page
                    window.location.href = '/dashboard?message=Tenant switched successfully';
                } else {
                    throw new Error(data.message || 'Failed to switch tenant');
                }
            } catch (error) {
                console.error('Tenant switch error:', error);
                alert('Failed to switch tenant: ' + error.message);
            }
        };
    });
    </script>
