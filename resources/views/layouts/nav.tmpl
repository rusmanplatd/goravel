    <!-- Organization Switcher JavaScript -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const organizationDropdown = document.getElementById('organizationDropdown');
        const organizationDropdownMenu = document.getElementById('organizationDropdownMenu');
        const organizationLoadingItem = document.getElementById('organizationLoadingItem');
        
        let organizationsLoaded = false;
        let userOrganizations = [];
        let currentorganizationId = null;

        // Load organizations when dropdown is clicked
        organizationDropdown.addEventListener('click', function(e) {
            if (!organizationsLoaded) {
                loadUserOrganizations();
            }
        });

        async function loadUserOrganizations() {
            try {
                // Load user organizations
                const organizationsResponse = await fetch('/organizations/user/list');
                const organizationsData = await organizationsResponse.json();
                
                // Load current organization
                const currentResponse = await fetch('/organizations/current');
                const currentData = await currentResponse.json();
                
                userOrganizations = organizationsData.organizations || [];
                currentorganizationId = currentData.current_organization?.id || null;
                
                renderOrganizationDropdown();
                organizationsLoaded = true;
            } catch (error) {
                console.error('Failed to load organizations:', error);
                organizationLoadingItem.innerHTML = '<span class="dropdown-item-text text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Failed to load organizations</span>';
            }
        }

        function renderOrganizationDropdown() {
            // Clear loading item
            organizationLoadingItem.remove();
            
            // Find the divider before "Manage Organizations"
            const divider = organizationDropdownMenu.querySelector('hr');
            
            if (userOrganizations.length === 0) {
                const noOrganizationsItem = document.createElement('li');
                noOrganizationsItem.innerHTML = '<span class="dropdown-item-text text-muted">No organizations available</span>';
                organizationDropdownMenu.insertBefore(noOrganizationsItem, divider);
            } else {
                userOrganizations.forEach(organization => {
                    const organizationItem = document.createElement('li');
                    const isActive = organization.id === currentorganizationId;
                    
                    organizationItem.innerHTML = `
                        <button type="button" class="dropdown-item ${isActive ? 'active' : ''}" onclick="switchOrganization('${organization.id}')">
                            <i class="fas fa-building me-2"></i>${organization.name}
                            ${isActive ? '<i class="fas fa-check ms-2"></i>' : ''}
                        </button>
                    `;
                    
                    organizationDropdownMenu.insertBefore(organizationItem, divider);
                });
            }
        }

        // Make switchOrganization function global
        window.switchOrganization = async function(organizationId) {
            if (organizationId === currentorganizationId) {
                return; // Already active
            }

            try {
                const response = await fetch('/organizations/switch', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ organization_id: organizationId })
                });

                const data = await response.json();
                
                if (data.success) {
                    // Show success message and reload page
                    window.location.href = '/dashboard?message=Organization switched successfully';
                } else {
                    throw new Error(data.message || 'Failed to switch organization');
                }
            } catch (error) {
                console.error('Organization switch error:', error);
                alert('Failed to switch organization: ' + error.message);
            }
        };
    });
    </script>
