{{define "auth/mfa-verify.tmpl"}}
    {{template "layouts/header.tmpl" .}}

    <!-- Page Content -->
    <main class="container-fluid">
        <div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 col-xl-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <div class="mx-auto bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-mobile-alt text-primary fs-4"></i>
                            </div>
                            <h2 class="h3 fw-bold text-dark mb-2">
                                Two-Factor Authentication
                            </h2>
                            <p class="text-muted small mb-0">
                                Enter the code from your authenticator app
                            </p>
                        </div>
                        
                        {{if .error}}
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div>{{.error}}</div>
                        </div>
                        {{end}}

                        <form method="POST" action="/auth/mfa/verify" id="mfa-verify-form">
                            <div class="mb-4">
                                <label for="code" class="form-label visually-hidden">Verification Code</label>
                                <input id="code" name="code" type="text" class="form-control form-control-lg text-center font-monospace" 
                                       placeholder="000000" maxlength="6" pattern="[0-9]{6}" required autocomplete="off" autofocus>
                                <div class="form-text text-center">
                                    Enter the 6-digit code from your authenticator app
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100" id="verify-btn">
                                <i class="fas fa-check me-2"></i>
                                Verify Code
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <div class="small text-muted mb-2">
                                Having trouble?
                            </div>
                            <div class="d-flex justify-content-center gap-3">
                                <a href="/login" class="text-decoration-none small">
                                    <i class="fas fa-arrow-left me-1"></i>
                                    Back to Login
                                </a>
                                <a href="#" class="text-decoration-none small" onclick="showHelpModal()">
                                    <i class="fas fa-question-circle me-1"></i>
                                    Need Help?
                                </a>
                            </div>
                        </div>

                        <!-- Countdown Timer -->
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                Code refreshes in <span id="countdown">30</span> seconds
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Help Modal -->
    <div class="modal fade" id="helpModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-question-circle me-2"></i>
                        Two-Factor Authentication Help
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <h6>Can't access your authenticator app?</h6>
                    <ul class="small">
                        <li>Make sure your device's time is synchronized</li>
                        <li>Try refreshing the code in your authenticator app</li>
                        <li>Check if you have backup codes saved</li>
                        <li>Contact support if you've lost access to your device</li>
                    </ul>
                    
                    <h6 class="mt-3">Common Issues:</h6>
                    <ul class="small">
                        <li><strong>Code doesn't work:</strong> Wait for a new code to generate</li>
                        <li><strong>App not found:</strong> Check your authenticator app list</li>
                        <li><strong>Wrong code:</strong> Ensure you're using the correct account</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="mailto:support@example.com" class="btn btn-primary">
                        <i class="fas fa-envelope me-2"></i>
                        Contact Support
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showHelpModal() {
            const modal = new bootstrap.Modal(document.getElementById('helpModal'));
            modal.show();
        }

        // Auto-format code input
        document.getElementById('code').addEventListener('input', function(e) {
            this.value = this.value.replace(/\D/g, '').substring(0, 6);
        });

        // Auto-submit when 6 digits are entered
        document.getElementById('code').addEventListener('input', function(e) {
            if (this.value.length === 6) {
                // Small delay to show the complete code
                setTimeout(() => {
                    document.getElementById('mfa-verify-form').submit();
                }, 500);
            }
        });

        // Countdown timer for code refresh
        let countdown = 30;
        const countdownElement = document.getElementById('countdown');
        
        function updateCountdown() {
            countdownElement.textContent = countdown;
            if (countdown > 0) {
                countdown--;
            } else {
                countdown = 30; // Reset countdown
            }
        }

        // Update countdown every second
        setInterval(updateCountdown, 1000);

        // Loading state for submit button
        document.getElementById('mfa-verify-form').addEventListener('submit', function() {
            const btn = document.getElementById('verify-btn');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Verifying...';
            btn.disabled = true;
        });

        // Focus on input when page loads
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('code').focus();
        });
    </script>

    {{template "layouts/footer.tmpl" .}}
{{end}} 